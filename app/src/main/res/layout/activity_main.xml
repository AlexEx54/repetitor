<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:keepScreenOn="true"
    android:minHeight="0dp"
    tools:context="com.projects.asgrebennikov.repetitor.MainActivity"
    tools:layout_editor_absoluteY="0dp">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_h_center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_h_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_v_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_v_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/startPracticeButton"
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:background="@color/color_black"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:text="Практика"
        app:layout_constraintBottom_toTopOf="@+id/main_h_center_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_v_guideline_1"
        app:layout_constraintEnd_toEndOf="@+id/main_v_guideline_2" />

    <Button
        android:id="@+id/startLearningButton"
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="Повторение"
        android:textStyle="bold"
        android:background="@color/color_black"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/main_h_center_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_v_guideline_1"
        app:layout_constraintEnd_toEndOf="@+id/main_v_guideline_2" />

    <Button
        android:id="@+id/writeFeedbackButton"
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="Написать нам (будем рады! :)"
        android:textStyle="bold"
        android:background="@color/color_black"
        android:textColor="@color/color_belize_hole"
        app:layout_constraintTop_toBottomOf="@+id/main_h_bottom_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_v_guideline_1"
        app:layout_constraintEnd_toEndOf="@+id/main_v_guideline_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
